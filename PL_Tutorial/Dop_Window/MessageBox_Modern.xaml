<Window x:Class="PL_Tutorial.Dop_Window.MessageBox_Modern"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL_Tutorial.Dop_Window"
        mc:Ignorable="d"
        Title="MessageBox_Modern" Height="150" Width="400"
        Style="{StaticResource ModernWindowStyle}">

    <Border Background="#323759" CornerRadius="20">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="6*"/>
                <ColumnDefinition Width="487*"/>
                <ColumnDefinition Width="6*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="36*"/>
                <RowDefinition Height="227*"/>
            </Grid.RowDefinitions>

            <!--Верхняя строка-->
            <Border  Background="#252a47" BorderThickness="0" CornerRadius="20, 20, 0, 0" Grid.ColumnSpan="3" Grid.RowSpan="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="243*"/>
                        <ColumnDefinition Width="23*"/>
                        <ColumnDefinition Width="134*"/>
                    </Grid.ColumnDefinitions>

                    <!--Закрыть-->
                    <Button Content="❌"
                        FontFamily="Fonts/#Dosis" 
                        FontSize="14"
                        Background="Transparent"
                        Foreground="AliceBlue"
                        FontWeight="Bold"
                            Cursor="Hand"
                        Style="{StaticResource ButtonClearTheme}"
                        BorderThickness="0" Click="Exit_Click" 
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center" Margin="97,0,0,0" RenderTransformOrigin="0.517,0.479" Height="16" Width="20"
                        Grid.Column="2"/>


                    <!--Заголовок-->
                    <TextBlock
                               HorizontalAlignment="Left"  
                               TextWrapping="Wrap" Text="Название ошибки" 
                               VerticalAlignment="Top"
                               FontWeight="Bold"
                               Style="{StaticResource ModernTextBlock}" Height="15" Width="222" Margin="15,4,0,0"/>
                </Grid>
            </Border>

            
            <TextBlock Grid.Column="1" 
                       HorizontalAlignment="Center" Margin="0,5,0,0" 
                       Grid.Row="1" TextWrapping="Wrap" 
                       Text="Текст ошибки" 
                       VerticalAlignment="Top" Height="78" Width="380"
                       Style="{StaticResource ModernTextBlock}"/>








        </Grid>
    </Border>

</Window>
